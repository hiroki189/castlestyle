%header
  .banner
    = render "castles/header"
    .banner__menu
      %ul.banner__menu__container
        %li
          = link_to "TOP", "/"
        %li
          = link_to "全国の城", ""
        %li
          = link_to "城ランキング", ""
        %li
          = link_to "城スタイル投稿", "/castles/new"

    

%div.home
  .home__view
    %ul.home__view__slider
      %Li.home__view__slider__clone
        = image_tag "top_image01.jpg"

  .home__article
    %h2.home__article__head
      お城
      = link_to "もっと見る›", "/castles/show" ,class: "home__article__head__readmore"
      %hr.home__article__head__separator
    %ul.home__article__primary
      - @castle.each do |castle|
        %li.home__article__primary__wide
          =link_to "", "", class: "home__article__primary__wide__list"
          .home__article__primary__wide__nail
            = image_tag castle.image,class: "home__article__primary__wide__nail_image"
          .home__article__primary__wide__media
            .home__article__primary__wide__media__title
              = castle.content

