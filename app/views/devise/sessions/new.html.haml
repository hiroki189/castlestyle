.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.container__heading
      メールアドレスでログイン
      %hr.container__heading_separator
    .container__form
      .container__form__user__mail
        %label.container__form__user__mail_text
          メールアドレス
        = f.email_field :email,class: "container__form__user__mail_input"
      .container__form__user__mail
        %label.container__form__user__mail_text
          パスワード
        = f.password_field :password,class: "container__form__user__mail_input"
      .container__form__user__actions
        =f.submit 'ログイン',class: "container__form__user__actions_primary"
        .container__form__user__actions__secondary
          = render "devise/shared/links"
